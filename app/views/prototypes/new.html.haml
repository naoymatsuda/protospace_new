= form_for @prototype, html: {class: "container proto-new"}, url: prototypes_path do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title", class: "proto-new-title"
    .row
      .col-md-12
        .cover-image-upload
          = f.fields_for :images do |i|
            = i.file_field :image
            = i.hidden_field :status, value: "main"
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :images do |i|
                = i.file_field :image
                = i.hidden_field :status, value: "sub"
          %li.list-group-item.col-md-4
            .image-upload
              = f.fields_for :images do |i|
                = i.file_field :image
                = i.hidden_field :status, value: "sub"
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catch_copy, placeholder: "Catch Copy"
      .col-md-12
        = f.text_field :concept, placeholder: "Concept"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            = text_field_tag 'prototype[tag_list]', @prototype.tag_list.join(","), placeholder: "Web Design"
    .row.text-center.proto-btn
      = f.submit "Publish", class: "btn.btn-lg.btn-primary.btn-block"

